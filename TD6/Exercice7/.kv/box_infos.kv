<BoxInfos>:
    orientation: "vertical"
    size_hint: None, 1
    width: "200dp"
    canvas.before:
        Color:
            rgb: .18, .18, .2
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size_hint: 1, None
        height: "50dp"
        Button:
            text: "Stop record" if root.game.record.active else "Start record"
            on_release: root.game.record.toggle()
        Button:
            text: "Show graph"
            disabled: not root.game.record.exist
            on_release: root.game.record.open()
    Label:
        text: root.info_text
    Slider:
        size_hint: 1, None
        height: "50dp"
        min: 1
        max: 100
        step: 1
        value: root.game.SIMULATION_RATE
        on_value: root.game.SIMULATION_RATE = self.value
    Button:
        text: "Stop simulation" if root.game.is_running else "Run simulation"
        size_hint: 1, None
        height: "50dp"
        on_release: root.game.toggle_simulation()
    Button:
        text: "Stop editing" if root.parent and root.parent.is_editing else "Edit map"
        size_hint: 1, None
        height: "50dp"
        on_release: root.parent.toggle_editing()
    BoxLayout:
        size_hint: 1, None
        height: "50dp"
        Button:
            text: "Clear"
            on_release: root.game.clear()
        Button:
            text: "Generate"
            on_release: root.game.generate()
